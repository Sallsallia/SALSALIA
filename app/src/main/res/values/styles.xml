<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Membuat style sendiri-->
    <!-- Menghilangkan AppBar-->
    <style name="NoactionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Menonaktifkan app bar-->
        <item name="windowActionBar">false</item>
        <!-- Memasukan gambar yang ada di folder drawable-->
        <item name = "background">@drawable/background</item>
        <!-- Menonaktifkan title-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>